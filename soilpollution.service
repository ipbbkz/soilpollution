[Unit]
Description=Soil Pollution Service

[Service]
WorkingDirectory=/var/www/soilpollution
ExecStart=/var/www/soilpollution/soilpollution
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=soilpollution-app
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_NOLOGO=true

[Install]
WantedBy=multi-user.target
