@page "/users"
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager
<h3>Users</h3>

<div class="table-responsive">
    <QuickGrid Items="@FilteredItems" Pagination="@pagination">
        <PropertyColumn Property="@(c => c.Email)" Sortable="true" Align="Align.Right" />
        <PropertyColumn Property="@(c => c.EmailConfirmed)" Sortable="true" Align="Align.Right" />
        <PropertyColumn Property="@(c => c.UserName)" Sortable="true" Align="Align.Right" />
        <PropertyColumn Property="@(c => c.LockoutEnabled)" Sortable="true" Align="Align.Right" />
        <PropertyColumn Property="@(c => c.AccessFailedCount)" Sortable="true" Align="Align.Right" />
    </QuickGrid>
</div>

@code {
    IQueryable<ApplicationUser>? items;
    PaginationState pagination = new PaginationState { ItemsPerPage = 15 };

    IQueryable<ApplicationUser>? FilteredItems => items;

    protected override async Task OnInitializedAsync()
    {
        this.items = userManager.Users;
    }
}
